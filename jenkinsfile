pipeline {
  agent any

  stages {
    stage('Clone Repo') {
      steps {
        git 'https://github.com/YOUR_USERNAME/fullstack-docker-ci.git'
      }
    }

    stage('Lint Frontend') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm run lint'
        }
      }
    }

    stage('Test Frontend') {
      steps {
        dir('frontend') {
          sh 'npm test'
        }
      }
    }

    stage('Lint Backend') {
      steps {
        dir('backend') {
          sh 'npm install'
          sh 'npm run lint'
        }
      }
    }

    stage('Test Backend') {
      steps {
        dir('backend') {
          sh 'npm test'
        }
      }
    }

    stage('Docker Build') {
      steps {
        sh 'docker-compose build'
      }
    }

    stage('Docker Run') {
      steps {
        sh 'docker-compose up -d'
      }
    }
  }

  post {
    always {
      echo 'Build Complete'
    }
  }
}
